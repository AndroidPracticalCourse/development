<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tum.controller.ControllerActivity">

    <Button
        android:id="@+id/button_armMode"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginStart="35dp"
        android:text="@string/str_armMode"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_wristMode"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginEnd="35dp"
        android:text="@string/str_wristMode"
        android:layout_alignBottom="@+id/button_armMode"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_clawController"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginBottom="90dp"
        android:text="@string/str_pickupdrop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
