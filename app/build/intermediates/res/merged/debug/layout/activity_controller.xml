<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tum.controller.ControllerActivity">

    <TextView
        android:id="@+id/text_currMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/str_currMode"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_currModeSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_currMode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="@string/str_arm"
        android:textColor="@android:color/black"
        android:textSize="60sp"/>

    <Button
        android:id="@+id/btn_toggleMode"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:text="@string/str_toggle"
        android:layout_below="@+id/text_currModeSel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btn_claw"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginBottom="59dp"
        android:text="@string/str_pickupdrop"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
