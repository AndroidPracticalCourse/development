<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tumandroidcourse2017.remoteapiserverconnect.ControlActivity">

    <LinearLayout
        android:id="@+id/linlayout_connDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp" >

        <ImageView
            android:id="@+id/img_phone"
            android:src="@drawable/ic_phone_android"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_connStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/text_connected"
                android:textColor="@color/darkGreen"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_detailsIpPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img_laptop"
            android:src="@drawable/ic_laptop"
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>


    <ToggleButton
        android:id="@+id/toggleSensorControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="97dp"
        android:checked="false"
        android:text="ToggleButton"
        android:textOff="Sensor Control OFF | Button Control ON"
        android:textOn="Sensor Control ON | Button Control OFF"
        android:layout_below="@+id/linlayout_connDetails"
        android:layout_centerHorizontal="true" />

